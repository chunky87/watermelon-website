<div id="flash-message">
    {{#if messages.error}}
    <div class="alert alert-danger">
        {{messages.error}}
    </div>
    {{else}}
    <div class="alert alert-success">
        {{messages.success}}
    </div>
    {{/if}}
</div>

<script>
    const flashMessage = document.getElementById('flash-message');
    flashMessage.addEventListener("animationend", function() {
        flashMessage.remove();
    })
</script>